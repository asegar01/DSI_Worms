                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120"/>
                                        <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle Fill="#A0E4F9"/>
                                    <Image Source="Assets/dinamita.png" Margin="21,0" Width="90" VerticalAlignment="Center"/>

                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
                                        <Image Source="Assets/coin.png" Margin="10, 0" Width="20"/>
                                        <TextBlock Text="970" Foreground="Green" FontWeight="Bold" Width="76"/>
                                    </StackPanel>

                                </Grid>
                            </Button>


                            <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="False"
                                    Background="White"
                                    CornerRadius="1"
                                    BorderBrush="Gray" Margin="20" Grid.Column="3" Grid.Row="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120"/>
                                        <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle Fill="Gray"/>
                                    <Image Source="Assets/lock.png" Margin="21,0" Width="90" VerticalAlignment="Center"/>

                                </Grid>
                            </Button>


                            <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="False"
                                    Background="White"
                                    CornerRadius="1"
                                    BorderBrush="Gray" Margin="20" Grid.Column="0" Grid.Row="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120"/>
                                        <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle Fill="Gray"/>
                                    <Image Source="Assets/lock.png" Margin="21,0" Width="90" VerticalAlignment="Center"/>

                                </Grid>
                            </Button>


                            <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="False"
                                    Background="White"
                                    CornerRadius="1"
                                    BorderBrush="Gray" Margin="20" Grid.Column="1" Grid.Row="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120"/>
                                        <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle Fill="Gray"/>
                                    <Image Source="Assets/lock.png" Margin="21,0" Width="90" VerticalAlignment="Center"/>

                                </Grid>
                            </Button>


                            <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="False"
                                    Background="White"
                                    CornerRadius="1"
                                    BorderBrush="Gray" Margin="20" Grid.Column="2" Grid.Row="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="120"/>
