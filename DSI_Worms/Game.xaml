                                        </StackPanel>

                                    </Grid>
                                </Button>


                                <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Background="White"
                                    BorderBrush="#606060" Margin="20" Grid.Column="1" Grid.Row="0">
